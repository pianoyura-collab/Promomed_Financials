    'primary': '#1f4e79',      # Professional navy blue
    'secondary': '#8B4513',    # Conservative brown
    'tertiary': '#2E5F5F',     # Teal
    'quaternary': '#4A4A4A',   # Charcoal gray
    'background': '#1f4e79',
    'card_bg': 'rgba(255, 255, 255, 0.95)',
